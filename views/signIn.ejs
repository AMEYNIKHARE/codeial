<div class="d-flex align-items-center flex-column">
    <form style="width: 50%;" action="/user/create-session" method="post">
        <div class="mb-3">
            <label for="loginUserEmail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="loginUserEmail" aria-describedby="emailHelp" required
                name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with
                anyone else.
            </div>
        </div>
        <div class="mb-3">
            <label for="loginUserPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="loginUserPassword" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Sign-In</button>
    </form>

    <div class="mt-3">
        <a href="/user/auth/google">
            <button type="button" class="btn btn-secondary">Sign In/Up Using Google</button>
        </a>
    </div>
    
</div>